{
  "name": "cuillerbot",
  "version": "1.0.0",
  "license": "MIT",
  "author": "lockeid",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "test": "tsc && ava",
    "dist": "rimraf dist && tsc --build tsconfig.prod.json",
    "start": "npm run dist && node dist/src/index.js",
    "dev": "nodemon"
  },
  "ava": {
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "files": [
      "**/tests/*.js"
    ],
    "powerAssert": false,
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ]
  },
  "dependencies": {
    "@types/ws": "^7.4.0",
    "discord.js": "^12.5.1",
    "ffmpeg-static": "^4.2.7"
  },
  "devDependencies": {
    "ava": "^5.2.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "nodemon": "^2.0.22",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.2"
  }
}
